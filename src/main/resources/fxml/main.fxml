<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thd.gui.MainController">
   <ButtonBar prefHeight="40.0" prefWidth="200.0">
     <buttons>
         <Button alignment="CENTER" minWidth="50" onAction="#start" prefWidth="80" text="开 始" />
         <Button mnemonicParsing="false" onAction="#clear" text="清 除" />
         <Separator minWidth="12.0" orientation="VERTICAL" prefHeight="40.0" />
         <CheckBox fx:id="mChkInterval" maxWidth="100.0" minWidth="100.0" mnemonicParsing="false" onAction="#modeChanged" prefWidth="100.0" text="定时模式" />
         <TextField fx:id="mTextInterval" alignment="CENTER_RIGHT" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" text="0" />
         <Label maxWidth="40.0" minWidth="40.0" prefWidth="40.0" text="分钟">
            <font>
               <Font size="16.0" />
            </font></Label>
         <Button mnemonicParsing="false" onAction="#applyInterval" text="设置时间" />
     </buttons>
   </ButtonBar>
    <GridPane fx:id="gridPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="200.0" prefHeight="400.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="200.0" prefHeight="400.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
        </children>
    </GridPane>
   <TextArea fx:id="mTextArea" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0">
      <padding>
         <Insets top="7.0" />
      </padding>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </TextArea>

</VBox>
